{
  "server": false,
  "data_dir": "/opt/consul",
  "verify_incoming": false,
  "verify_outgoing": true,
  "verify_server_hostname": true,
  "ca_file": "/etc/consul.d/ca.pem",
  "auto_encrypt": {
    "tls": true
  },
  "acl": {
      "enabled": true,
      "default_policy": "deny",
      "enable_token_persistence": true
  },
  "retry_join": ["provider=aws tag_key=consul tag_value=server"]
}
